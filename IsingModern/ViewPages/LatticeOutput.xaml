                <StackPanel Grid.Column="2" HorizontalAlignment="Left">
                    <Button Name="ToggleBoundary" 
                            Click="ToggleBoundary_Click"
                            Content="Boundary!" 
                           Height="30" VerticalAlignment="Top"/>
                    <Button Name="Randomize" 
                            Click="RandomizeClick" PreviewKeyDown="RandomizeClick"  
                            Content="Randomize!"
                            Height="30" VerticalAlignment="Top"/>
                    <Button Name="LatticeSize" 
                            Click="LatticeSize_Click"  MouseWheel="LatticeSize_MouseWheel" 
                            Content="Set Size"
                           Height="30" VerticalAlignment="Top"/>
                    <Button Name="UpdateSingle" 
                            Click="UpdateCorner" 
                            Content="Update Corner"
                           Height="30" VerticalAlignment="Top"/>
                </StackPanel>
                <StackPanel Grid.Column="3">
                    <TextBlock Name="BoundaryText"
                               TextAlignment="Right" FontSize="15"
                               Width="70" Height="30"
                               VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Name="StatusText" 
                               TextAlignment="Right" FontSize="15" 
