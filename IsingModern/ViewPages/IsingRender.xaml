<UserControl x:Class="IsingModern.Render.IsingRender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="600">


    <Grid Style="{StaticResource ContentRoot}" Name="maingrid" KeyDown="maingrid_KeyDown" >
        <ScrollViewer>
            <Grid MinWidth="300" MinHeight="300"  VerticalAlignment="Top" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>


                <Grid Grid.Column="0" Name="modelParentElement" Width="600" Height="600" Background="Transparent"/>





                <StackPanel Grid.Column="2" HorizontalAlignment="Left">
                    <Label Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Temperature"/>
                    <Label Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Coupling Constant"/>
                    <Label Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Magnetic Field"/>

                    <Button Name="ToggleBoundary" 
                            Click="ToggleBoundary_Click"
                            Content="Boundary!" 
                           Height="30" VerticalAlignment="Top"/>
                    <Button Name="Randomize" 
                            Click="RandomizeClick" 
                            Content="Randomize!"
                            Height="30" VerticalAlignment="Top"/>
                    <Button Name="LatticeSize" 
                            Click="LatticeSize_Click"  MouseWheel="LatticeSize_MouseWheel"  KeyDown="LatticeSize_KeyDown" 
                            Content="Set Size"
                           Height="30" VerticalAlignment="Top"/>
                    <Button Name="TopRight" 
                            Click="TopRight_Click" 
                            Content="Top Right"
                           Height="30" VerticalAlignment="Top"/>
                    <Button Name="Time" 
                            Click="Time_Click" 
                            Content="Time"
                           Height="30" VerticalAlignment="Top"/>

                </StackPanel>
                <StackPanel Grid.Column="3" Grid.ColumnSpan="2">
                    <DockPanel Grid.ColumnSpan="2">
                        <Slider DockPanel.Dock="Left" Name="Temperature" Height="30"  Maximum="5" TickPlacement="BottomRight" TickFrequency="0.5" IsSnapToTickEnabled="False"
                                ValueChanged="TemperatureSlider_ValueChanged"
                                Width="230"/>
                        <Label Height="30" Content="{Binding ElementName=Temperature, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="40"  />
                    </DockPanel>
                    <DockPanel Grid.ColumnSpan="2">
                        <Slider DockPanel.Dock="Left" Name="CouplingConstant" Height="30"   Minimum="-1" Maximum="1"  TickPlacement="BottomRight" TickFrequency="0.5" IsSnapToTickEnabled="False"
                                ValueChanged="CouplingConstant_ValueChanged"
                                Width="230"/>
                        <Label Height="30" Content="{Binding ElementName=CouplingConstant, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="40"  />
                    </DockPanel>
                    <DockPanel Grid.ColumnSpan="2">
                        <Slider DockPanel.Dock="Left" Name="MagneticField" Height="30" Minimum="-1"  Maximum="1" TickPlacement="BottomRight" TickFrequency="0.5" IsSnapToTickEnabled="False"
                                ValueChanged="MagneticField_ValueChanged"
                                Width="230"/>
                        <Label Height="30" Content="{Binding ElementName=MagneticField, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="40"  />
                    </DockPanel>
                    <TextBlock Name="BoundaryText"
                               TextAlignment="Right" FontSize="15"
                               Width="70" Height="30"
                               VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Name="StatusText" 
                               TextAlignment="Right" FontSize="15" 
                               Width="70" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"
                               Text="Init"/>
                    <TextBlock Name="LatticeSizeInput" 
                               MouseWheel="LatticeSize_MouseWheel" 
                               TextAlignment="Right" FontSize="15" 
                               Width="70" Height="30" 
                               VerticalAlignment="Top" HorizontalAlignment="Left"
                               Text="Init Failed"/>

                </StackPanel>





            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
